<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

<android.support.v7.widget.Toolbar
  android:id="@+id/langselect_toolbar"
  android:layout_width="match_parent"
  android:layout_height="?attr/actionBarSize"
  android:elevation="4dp"
  android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
  app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
  android:background="?attr/colorPrimary">
</android.support.v7.widget.Toolbar>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView android:text="@string/lang_select_title" style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>

    <Button android:id="@+id/lang_cz" android:text="@string/lang_cz"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <Button android:id="@+id/lang_hu" android:text="@string/lang_hu"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <Button android:id="@+id/lang_sk" android:text="@string/lang_sk"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/override_locale_check" android:text="@string/override_locale"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <TextView android:text="@string/settings_title" style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/vol_buttons_check" android:text="@string/vol_buttons"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/dimlock_check" android:text="@string/dimlock"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/mute_check" android:text="@string/mute"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/long_click_toggles_bar_check" android:text="@string/long_click_toggles_bar"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/transparent_nav_check" android:text="@string/transparent_nav"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <TextView android:text="@string/prayer_content_settings1_title" style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/various_options_in_prayers_check" android:text="@string/various_options_in_prayers"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/alternatives_check" android:text="@string/alternatives"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <TextView android:text="@string/prayer_content_settings_title" style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/display_communia_info_check" android:text="@string/display_communia_info"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/verse_numbering_check" android:text="@string/verse_numbering"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/bible_references_check" android:text="@string/bible_references"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/bible_ref_bible_com_check" android:text="@string/bible_ref_bible_com"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/footnotes_check" android:text="@string/footnotes"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/liturgical_readings_check" android:text="@string/liturgical_readings"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/psalms_omisions_check" android:text="@string/psalms_omisions"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <TextView android:text="@string/display_settings_title" style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/first_vespers_buttons_check" android:text="@string/first_vespers_buttons"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/navigation_check" android:text="@string/navigation"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/wrapping_printed_check" android:text="@string/wrapping_printed"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/smart_buttons_check" android:text="@string/smart_buttons"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/night_mode_check" android:text="@string/night_mode"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/background_override_check" android:text="@string/background_override"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/normal_font_check" android:text="@string/normal_font"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/buttons_order_check" android:text="@string/buttons_order"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <TextView android:text="@string/calendar_settings_title" style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/epiphany_sunday_check" android:text="@string/epiphany_sunday"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/ascension_sunday_check" android:text="@string/ascension_sunday"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/body_blood_sunday_check" android:text="@string/body_blood_sunday"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

    <CheckBox android:id="@+id/emphasize_local_calendar_check" android:text="@string/emphasize_local_calendar"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>

</LinearLayout>

</ScrollView>

</LinearLayout>
